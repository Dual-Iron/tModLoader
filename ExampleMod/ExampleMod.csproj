<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
	  <tMLDefault> ..\..\references </tMLDefault>
	  <tMLOneDrive>C:\Users\$(USERNAME)\OneDrive\Documents\My Games\Terraria\ModLoader\Beta\references</tMLOneDrive>
	  <OneDriveLocation Condition="Exists($(tMLOneDrive))">
		  <Import Project= "$(tMLOneDrive)\tModLoader.targets" />
	  </OneDriveLocation>
	  <DefaultLocation Condition="Exists($(tMLDefault))">
		  <Import Project= "$(tMLDefault)\tModLoader.targets" />
	  </DefaultLocation>
  </PropertyGroup>
  
  <PropertyGroup>
	<AssemblyName>ExampleMod</AssemblyName>
	<TargetFramework>netcoreapp3.1</TargetFramework>
	<PlatformTarget>AnyCPU</PlatformTarget>
	<LangVersion>latest</LangVersion>
  </PropertyGroup>
  <Target Name="BuildMod" AfterTargets="Build">
	<Exec Command="dotnet &quot;$(tMLBuildServerPath)&quot; -build $(ProjectDir) -eac $(TargetPath) -define $(DefineConstants) -unsafe $(AllowUnsafeBlocks)" />
  </Target>
  <ItemGroup>
	<PackageReference Include="tModLoader.CodeAssist" Version="0.1.*" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="Old\**" />
    <EmbeddedResource Remove="Old\**" />
    <None Remove="Old\**" />
  </ItemGroup>
</Project>
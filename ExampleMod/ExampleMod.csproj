<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
	<tMLDefault> ..\..\references </tMLDefault>
	<tMLWindowsDeviance>Users\$(USERNAME)\OneDrive\</tMLWindowsDeviance>
	<tMLWindows> C:\$(tMLWindowsDeviance)Documents\My Games\Terraria\ModLoader\Beta\references</tMLWindows>
	<DefaultLocation Condition="Exists($(tMLTargetsDefault))"> </DefaultLocation>
	<tML> $if$ '$(DefaultLocation)' tMLDefault $else$ tMLWindows </tML>
  </PropertyGroup>
  <Import Project= "$(tMLWindows)\tModLoader.targets" />
  <PropertyGroup>
	<AssemblyName>ExampleMod</AssemblyName>
	<TargetFramework>netcoreapp3.1</TargetFramework>
	<PlatformTarget>AnyCPU</PlatformTarget>
	<LangVersion>7.3</LangVersion>
  </PropertyGroup>
  <Target Name="BuildMod" AfterTargets="Build">
	<Exec Command="&quot;$(tMLBuildServerPath)&quot; -build $(ProjectDir) -eac $(TargetPath) -define $(DefineConstants) -unsafe $(AllowUnsafeBlocks)" />
  </Target>
  <ItemGroup>
	<PackageReference Include="tModLoader.CodeAssist" Version="0.1.*" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="Old\**" />
    <EmbeddedResource Remove="Old\**" />
    <None Remove="Old\**" />
  </ItemGroup>
</Project>